<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Aleksey Dem's Blog{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i|Roboto:400,400i,700,700i&display=swap&subset=cyrillic" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="layout">
            <div class="layout__header">
                {{ include('layout/header.html.twig') }}
            </div>
            <div class="layout__body">
                <div class="flash-messages">
                    {% for label, message in app.flashes %}
                        {% for message in messages %}
                            <div class="flash-messages__item flash-messages__item_{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                <div class="body body_horizontal body_container">
                    <div class="body__side">
                        {% block side %}{% endblock %}
                    </div>
                    <div class="body__content">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
            <footer class="layout__footer">
                {{ include('layout/footer.html.twig') }}
            </footer>
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
