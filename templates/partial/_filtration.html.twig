<div class="spacer spacer_default">
    <form class="form form_inline" method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">

        {% if fields|length > 1 %}
            <select class="form__select-widget form__select-widget_inline" name="{{ filterFieldName }}">
                {% for field, label in fields %}
                    <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
                {% endfor %}
            </select>
        {% else %}
            <input type="hidden" name="{{ filterFieldName }}" value="{{ fields|keys|first }}" />
        {% endif %}

        <input class="form__text-widget form__text-widget_inline" type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" />

        <input class="form__submit-widget" type="submit" value="{{ options.button }}">

    </form>
</div>
